<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="rounding_method" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" title="If this checkbox is ticked, you will enable the Netherlands Tax Invoice Basis (Factuurstelsel).">
                    <div class="o_setting_left_pane">
                        <field name="l10n_nl_tax_invoice_basis"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="l10n_nl_tax_invoice_basis"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are Netherlands localization specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                           NL Tax Invoice Basis (Factuurstelsel)
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
