<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div id="office_365" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane" name="critical_path_duration_base_right_pane">
                        <label for="office_365_client_id" string="Office 365"/>
                        <div class="text-muted">
                            Tenant ID
                        </div>
                        <field name="office_365_tenant_id" class="o_light_label"/>
                        <div class="text-muted">
                            Client ID
                        </div>
                        <field name="office_365_client_id" class="o_light_label"/>
                        <div class="text-muted">
                            Client Secret
                        </div>
                        <field name="office_365_client_secret" class="o_light_label" password="True"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
